<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><% if task.completed == true %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %> <%= link_to "🗑️", task_path(task), method: :delete %></li>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
